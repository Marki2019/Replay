{
  "app-id" : "com.github.nahuelwexd.Replay.Devel",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "master",
  "sdk" : "org.gnome.Sdk",
  "command" : "com.github.nahuelwexd.Replay",
  "finish-args" : [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc",
    "--share=network",
    "--device=dri"
  ],
  "cleanup" : [
    "sassc",
    "/include",
    "/lib/pkgconfig",
    "libsass*",
    "/lib/girepository-1.0",
    "/share/gir-1.0",
    "/share/vala",
    "*.a",
    "*.la"
  ],
  "modules" : [
    {
      "name" : "libsass",
      "buildsystem" : "simple",
      "build-options" : {
        "env" : {
          "LIBSASS_VERSION" : "3.6.4"
        }
      },
      "build-commands" : [
        "autoreconf -i",
        "./configure --prefix=/app",
        "make",
        "make install"
      ],
      "sources" : [
        {
          "type" : "git",
          "url" : "https://github.com/sass/libsass.git",
          "tag" : "3.6.4"
        }
      ]
    },
    {
      "name" : "sassc",
      "buildsystem" : "simple",
      "build-commands" : [
        "autoreconf -i",
        "./configure --prefix=/app",
        "make",
        "make install"
      ],
      "sources" : [
        {
          "type" : "git",
          "url" : "https://github.com/sass/sassc.git",
          "tag" : "3.6.1"
        }
      ]
    },
    {
      "name" : "vul",
      "buildsystem" : "meson",
      "builddir" : true,
      "sources" : [
        {
          "type" : "git",
          "url" : "https://gitlab.gnome.org/BZHDeveloper/vul.git"
        },
        {
          "type" : "patch",
          "path" : "0001-Fixed-compilation-with-Vala-0-48-7.patch"
        }
      ]
    },
    {
      "name" : "replay",
      "buildsystem" : "meson",
      "builddir" : true,
      "config-opts" : [
        "-Dprofile=development"
      ],
      "sources" : [
        {
          "type" : "dir",
          "path" : "../.."
        }
      ]
    }
  ]
}
