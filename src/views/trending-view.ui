<interface>

<template class="TrendingView" parent="GtkWidget">
  <child>
    <object class="GtkStack" id="_stack">
      <property name="transition-type">crossfade</property>

      <!-- Spinner -->
      <child>
        <object class="GtkStackPage">
          <property name="name">loading</property>

          <property name="child">
            <object class="GtkSpinner">
              <property name="spinning">True</property>
            </object>
          </property>

        </object>
      </child>
      <!-- Spinner -->

      <!-- Error message -->
      <child>
        <object class="GtkStackPage">
          <property name="name">error</property>

          <property name="child">
            <object class="ErrorMessage">
              <property name="valign">center</property>
              <!-- Translators: This is the label shown when the app fails to get trending videos -->
              <property name="label" translatable="yes">Failed to get trending videos</property>
            </object>
          </property>

        </object>
      </child>
      <!-- Error message -->

      <!-- Videos grid -->
      <child>
        <object class="GtkStackPage">
          <property name="name">videos</property>

          <property name="child">
            <object class="GtkScrolledWindow">
              <property name="hscrollbar-policy">never</property>

              <child>
                <object class="GtkFlowBox" id="_videos_box">
                  <property name="selection-mode">none</property>
                  <property name="activate-on-single-click">True</property>
                  <property name="homogeneous">True</property>
                </object>
              </child>

            </object>
          </property>

        </object>
      </child>
      <!-- Videos grid -->

    </object>
  </child>
</template>

</interface>
