<interface>

<template class="VideoTile" parent="GtkBox">
  <property name="orientation">vertical</property>

  <!-- Video thumbnail -->
  <child>
    <object class="GtkImage" id="_thumbnail">
      <property name="visible">True</property>
    </object>
  </child>
  <!-- Video thumbnail -->

  <!-- Video title -->
  <child>
    <object class="GtkLabel">
      <property name="visible">True</property>
      <property name="label" bind-source="VideoTile" bind-property="title" />
      <property name="wrap">True</property>
      <property name="wrap-mode">word-char</property>
      <property name="max-width-chars">0</property>
      <property name="ellipsize">end</property>
      <property name="lines">2</property>
      <property name="xalign">0</property>

      <style>
        <class name="heading" />
      </style>

    </object>
  </child>
  <!-- Video title -->

  <!-- Channel title -->
  <child>
    <object class="GtkLabel">
      <property name="visible">True</property>
      <property name="label" bind-source="VideoTile" bind-property="channel-title" />
      <property name="wrap">True</property>
      <property name="wrap-mode">word-char</property>
      <property name="max-width-chars">0</property>
      <property name="ellipsize">end</property>
      <property name="lines">2</property>
      <property name="xalign">0</property>

      <style>
        <class name="caption" />
      </style>

    </object>
  </child>
  <!-- Channel title -->

</template>

</interface>
