<interface>

<template class="ReplaySidebarItem" parent="GtkWidget">

  <property name="layout-manager">
    <object class="GtkBoxLayout">
      <property name="spacing">16</property>
    </object>
  </property>

  <child>
    <object class="GtkImage" id="_image">
      <property name="icon-name" bind-source="ReplaySidebarItem" bind-property="icon-name"
                bind-flags="sync-create | default" />
    </object>
  </child>

  <child>
    <object class="GtkLabel" id="_gtk_label">
      <property name="label" bind-source="ReplaySidebarItem" bind-property="label" bind-flags="sync-create | default" />
    </object>
  </child>

</template>

</interface>
