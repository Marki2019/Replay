<interface>

<template class="MainHeaderBar" parent="GtkWidget">
  <child>
    <object class="GtkHeaderBar" id="_headerbar">
      <property name="show-title-buttons">True</property>

      <!-- Menu button -->
      <child type="end">
        <object class="GtkMenuButton" id="_menu_button">
          <property name="visible">True</property>
          <property name="menu-model">main-menu</property>
          <!-- Translators: This is the text for the tooltip on the primary menu button -->
          <property name="tooltip-text" translatable="yes">Menu</property>
          <property name="direction">none</property>
        </object>
      </child>
      <!-- Menu button -->

    </object>
  </child>
</template>

<!-- Menu model -->
<menu id="main-menu">
  <section>
    <item>
      <!-- Translators: This is the label used for the about item in the primary menu -->
      <attribute name="label" translatable="yes">About Replay</attribute>
      <attribute name="action">app.about</attribute>
    </item>
  </section>
</menu>
<!-- Menu model -->

</interface>
