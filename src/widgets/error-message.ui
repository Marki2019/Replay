<interface>

<template class="ErrorMessage" parent="GtkBox">
  <property name="orientation">vertical</property>
  <property name="spacing">20</property>

  <!-- Error image -->
  <child>
    <object class="GtkImage">
      <property name="visible">True</property>
      <property name="icon-name">computer-fail-symbolic</property>
      <property name="pixel-size">72</property>
      <property name="halign">center</property>
    </object>
  </child>
  <!-- Error image -->

  <!-- Error label -->
  <child>
    <object class="GtkLabel">
      <property name="visible">True</property>
      <property name="label" bind-source="ErrorMessage" bind-property="label" />
      <property name="halign">center</property>

      <style>
        <class name="heading" />
      </style>

    </object>
  </child>
  <!-- Error label -->

  <!-- Retry button -->
  <child>
    <object class="GtkButton">
      <property name="visible">True</property>
      <!-- Translators: This is the label for the retry button in an error message -->
      <property name="label" translatable="yes">Retry</property>
      <property name="halign">center</property>
      <signal name="clicked" handler="on_retry_button_clicked" />

      <style>
        <class name="suggested-action" />
      </style>

    </object>
  </child>
  <!-- Retry button -->

</template>

</interface>
